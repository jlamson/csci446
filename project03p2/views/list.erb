<h2>Sorted by <%= @sort_order.capitalize %></h2>
<table>
	<tr>
		<th>Rank</th>
		<th>Name</th>
		<th>Year</th>
	</th>	
	<% @albums.each do |album| %>
		<tr class="rank<%= album.rank %>" >
			<td><%= album.rank %></td> 
			<td><%= album.title %></td> 
			<td><%= album.year %></td> 
		</tr>
	<% end %> 
</table>